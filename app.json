
{
  "expo": {
    "name": "Better Living",
    "slug": "better-living",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "entryPoint": "./src/App.tsx",
    "version": "1.0.3",
    "orientation": "default",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.patrickhanna.betterliving",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Your photo library is needed to allow you upload photos into the app.",
        "NSCameraUsageDescription": "Your camera is needed to allow you to upload photos into the app."
      },
      "supportsTablet": true
    },
    "androidStatusBar": {
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "versionCode": 2,
      "package": "com.patrickhanna.betterliving",
      "useNextNotificationsApi": true,
      "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    }
  }
}
